<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

            <ImageView
                android:layout_width="@dimen/navigation_drawer_width"
                android:layout_height="26dp"
                android:id="@+id/imageViewBar1"
                android:background="@drawable/gradient_drawable"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/textViewArtesianCategories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artesian Blends"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/goldtext"
                android:layout_marginLeft="5dp"
                android:textStyle="italic"
                android:layout_below="@+id/imageViewBar1"
                android:layout_alignParentStart="true" />
            <ListView
                android:id="@+id/listviewArtesianCategories"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_list_height"
                android:layout_above="@+id/imageViewBar2"
                android:layout_below="@+id/textViewArtesianCategories" />

            <ImageView
                android:layout_width="@dimen/navigation_drawer_width"
                android:layout_height="26dp"
                android:id="@+id/imageViewBar2"
                android:background="@drawable/gradient_drawable"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/textViewPremiumBrands"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium Brands"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/goldtext"
                android:layout_marginLeft="5dp"
                android:textStyle="italic"
                android:layout_below="@+id/imageViewBar2"
                android:layout_alignParentStart="true" />
            <ListView
                android:id="@+id/listviewPremiumBrands"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_list_height"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/textViewPremiumBrands" />


</RelativeLayout>
